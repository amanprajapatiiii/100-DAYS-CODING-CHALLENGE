 */ Q:9 Write a program to calculate simple and compound interest for given principal, rate, and time. */
#include <stdio.h>
#include <math.h>

int main() {
    double principal, rate, time, simple_interest, compound_interest;
    printf("Enter principal, rate and time: ");
    scanf("%lf %lf %lf", &principal, &rate, &time);

    simple_interest = (principal * rate * time) / 100.0;
    compound_interest = principal * pow((1 + rate / 100.0), time) - principal;

    printf("Simple Interest = %.2lf\n", simple_interest);
    printf("Compound Interest = %.2lf\n", compound_interest);
    return 0;
}
